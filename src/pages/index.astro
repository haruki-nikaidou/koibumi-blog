---
import RootLayout from "../layouts/RootLayout.astro";
import { getCollection } from "astro:content";
import { Icon } from "astro-icon/components";
import siteConfig from '../../content/site.json';
import Card from "@/components/Card.astro";
import PostCard from "../components/PostCard.astro";
import BigAvatar from "@/components/avatar.svg";

const SITE_TITLE = siteConfig.title;
const SITE_DESCRIPTION = siteConfig.description;

const posts = (await getCollection("blog"))
    .filter((post) => post.data.pinned)
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<RootLayout title={SITE_TITLE} description={SITE_DESCRIPTION} width="md">
    <Card id="avatar-bio">
        <BigAvatar class="big-avatar"/>
        <section id="bio">
            <h2 class="emphasize">
                {SITE_TITLE}
            </h2>
            <p>
                星に祈れど、空は答えず、<br />
                堕ちるは常に、隕の石のみ。
            </p>
            <div>
                <p>
                    <strong> Contact me: </strong>
                </p>
                <div id="contact">
                    <a
                        class="icon-link"
                        href="https://github.com/haruki-nikaidou"
                        target="_blank"
                        aria-label="GitHub"
                    >
                        <Icon
                            name="simple-icons:github"
                            width={32}
                            height={32}
                        />
                    </a>
                    <a
                        class="icon-link"
                        href="https://bsky.app/profile/nkdharuki.bsky.social"
                        target="_blank"
                        aria-label="Blue Sky"
                    >
                        <Icon
                            name="logos:bluesky"
                            width={32}
                            height={32}
                        />
                    </a>
                    <a
                        class="icon-link"
                        href="https://matrix.to/#/@nikaidou_haruki:matrix.org"
                        target="_blank"
                        aria-label="matrix"
                    >
                        <Icon
                            name="simple-icons:matrix"
                            width={32}
                            height={32}
                        />
                    </a>
                    <a
                        class="icon-link"
                        href="https://misskey.io/@nkdharuki"
                    >
                        <Icon
                            name="simple-icons:misskey"
                            width={32}
                            height={32}
                        />
                    </a>
                    <a
                        class="icon-link"
                        href="https://www.reddit.com/user/Acrobatic-Cat-2005/"
                        target="_blank"
                        aria-label="reddit"
                    >
                        <Icon
                            name="logos:reddit-icon"
                            width={32}
                            height={32}
                        />
                    </a>
                </div>
            </div>
        </section>
    </Card>

    <Card>
        <h3>Pinned Posts</h3>
    </Card>
    <section id="pinned-container">
        {
            posts.map((post) => (
                <PostCard {...post.data} slug={post.id} />
            ))
        }
    </section>
</RootLayout>

<style>
    main {
        max-width: 70rem;
        width: 100%;
        margin: 3rem auto;
        padding: 0 1rem;
    }

    main > * {
        margin-bottom: 2rem;
    }

    main > *:last-child {
        margin-bottom: 0;
    }

    #avatar-bio {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 3rem;
        margin-top: 3rem;
        margin-bottom: 3rem;
    }

    .big-avatar {
        width: 15rem;
        height: 15rem;
        border-radius: 50%;
    }

    #bio {
        max-width: 20rem;
    }

    @media (max-width: 700px) {
        #avatar-bio {
            flex-direction: column;
        }

        #bio {
            max-width: 100%;
        }
    }

    #bio > p {
        line-height: 1.5;
        letter-spacing: 0.02rem;
    }

    #bio > * {
        margin-bottom: 0.75rem;
    }

    #bio > *:last-child {
        margin-bottom: 0;
    }

    #contact {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        margin-top: 0.25rem;
        gap: 0.5rem;
    }

    .icon-link {
        display: block;
        height: 2rem;
        width: 2rem;
        & > * {
            display: inline;
        }
    }

    [data-icon="simple-icons:misskey"]{
        * {
            color: #A1CA03 !important;
        }
    }

    #pinned-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1rem;
        margin-top: 1rem;
    }
</style>
